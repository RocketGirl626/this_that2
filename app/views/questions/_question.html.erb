

<div class="post_wrapper" id='question_<%= question.id %>'>

  <h2 class="title"><%= question.option1 %></h2>

  <%= link_to like_question_path(question), class: 'like', method: :put do %>
    <button type='button' class='btn btn-info' aria-label='Left Align'>
      <span class='glyphicon glyphicon-thumps-up glyphicon-align-center' aria-hidden='true'></span>
      <span class='badge'><%= question.get_upvotes.size %>
    </button>
  <% end %>


  <h2 class="title"><%= question.option2 %></h2>

  <%= link_to unlike_question_path(question), class: 'like', method: :put do %>
    <button type='button' class='btn btn-info' aria-label='Left Align'>
      <span class='glyphicon glyphicon-thumps-up glyphicon-align-center' aria-hidden='true'></span>
      <span class='badge'><%= question.get_downvotes.size %>
    </button>
  <% end %>

  <p class="date"><%= question.created_at.strftime("%B %d, %Y") %></p>

  <div id="comments">
    <%= link_to "Add A Comment", new_question_comment_path(:question_id) %>
    <% question.comments.each do |comment| %>
      <h3><%= comment.body %></h3>
    <% end %>
  </div>



</div>
